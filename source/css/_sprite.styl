/*
Stylus variables are information about icon's compiled state, stored under its original file name

.icon-home {
  width: $icon_home_width;
}

The large array-like variables contain all information about a single icon
$icon_home = x y offset_x offset_y width height total_width total_height image_path;

At the bottom of this section, we provide information about the spritesheet itself
$spritesheet = width height image $spritesheet_sprites;
*/
$pic_name = 'pic';
$pic_x = 560px;
$pic_y = 0px;
$pic_offset_x = -560px;
$pic_offset_y = 0px;
$pic_width = 540px;
$pic_height = 360px;
$pic_total_width = 1100px;
$pic_total_height = 559px;
$pic_image = 'sprite.png';
$pic = 560px 0px -560px 0px 540px 360px 1100px 559px 'sprite.png' 'pic';
$timer_bg_red_name = 'timer_bg_red';
$timer_bg_red_x = 0px;
$timer_bg_red_y = 0px;
$timer_bg_red_offset_x = 0px;
$timer_bg_red_offset_y = 0px;
$timer_bg_red_width = 550px;
$timer_bg_red_height = 559px;
$timer_bg_red_total_width = 1100px;
$timer_bg_red_total_height = 559px;
$timer_bg_red_image = 'sprite.png';
$timer_bg_red = 0px 0px 0px 0px 550px 559px 1100px 559px 'sprite.png' 'timer_bg_red';
$spritesheet_width = 1100px;
$spritesheet_height = 559px;
$spritesheet_image = 'sprite.png';
$spritesheet_sprites = $pic $timer_bg_red;
$spritesheet = 1100px 559px 'sprite.png' $spritesheet_sprites;

/*
The provided mixins are intended to be used with the array-like variables

.icon-home {
  spriteWidth($icon_home)
}

.icon-email {
  sprite($icon_email)
}

Here are example usages in HTML:

`display: block` sprite:
<div class="icon-home"></div>

`display: inline-block` sprite:
<img class="icon-home" />
*/
spriteWidth($sprite) {
  width: $sprite[4];
}

spriteHeight($sprite) {
  height: $sprite[5];
}

spritePosition($sprite) {
  background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
  background-image: url($sprite[8]);
}

sprite($sprite) {
  spriteImage($sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)
}

/*
The `sprites` mixin generates identical output to the CSS template
  but can be overridden inside of Stylus

This must be run when you have at least 2 sprites.
  If run with a single sprite, then there will be reference errors.

sprites($spritesheet_sprites);
*/
sprites($sprites) {
  for $sprite in $sprites {
    $sprite_name = $sprite[9];
    .{$sprite_name} {
      sprite($sprite);
    }
  }
}
